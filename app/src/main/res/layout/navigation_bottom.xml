<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/navigation_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:weightSum="5"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/ln_btn_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_grid"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_selected" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Tổng thể"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#d1a554"
            android:fontFamily="@font/quicksand"
            android:textSize="@dimen/navigation_text_size"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_btn_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_list"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_list"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Chi tiết"
            android:textColor="#d1a554"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand"
            android:textSize="@dimen/navigation_text_size"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_btn_associations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_associations"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_book"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/bieutuong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Biểu tượng"
            android:textColor="#d1a554"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:fontFamily="@font/quicksand"
            android:textSize="@dimen/navigation_text_size"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_minus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_minus"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Thu"
            android:textColor="#d1a554"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand"
            android:textSize="@dimen/navigation_text_size"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_plus"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Phóng"
            android:textColor="#d1a554"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand"
            android:textSize="@dimen/navigation_text_size"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>