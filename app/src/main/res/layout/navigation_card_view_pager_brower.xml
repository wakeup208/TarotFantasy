<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#b23ad0"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:weightSum="3"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/ln_card_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_card_detail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_details_press" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Đậu Xanh"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_associations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_associations"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_book" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Đậu Xanh"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_home_navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_home_navigate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_home" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Đậu Xanh"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>