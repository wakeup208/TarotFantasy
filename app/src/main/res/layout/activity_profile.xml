<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/commom_padding"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/img_size"
                android:layout_marginBottom="@dimen/margin"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/commom_padding"
                android:paddingEnd="@dimen/commom_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/margin_bottom"
                    android:layout_toEndOf="@+id/img_home"
                    android:background="@drawable/list_background"
                    android:fontFamily="@font/quicksand"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:text="@string/str_cai_dat"
                    android:textColor="@color/navigation_color"
                    android:textSize="@dimen/app_name_font_size" />

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="@dimen/img_size"
                    android:layout_height="@dimen/img_size"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_home_48" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:contentDescription="TODO"
                android:src="@drawable/black_white_gradient" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="@dimen/commom_padding"
                android:paddingEnd="@dimen/commom_padding">

                <TextView
                    android:id="@+id/btnReverseCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/list_background"
                    android:fontFamily="@font/quicksand"
                    android:gravity="left"
                    android:text="@string/dao_nguoc_bai"
                    android:textColor="@color/white"
                    android:textSize="@dimen/commom_font_size_big" />

                <CheckBox
                    android:id="@+id/cbReverseCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:padding="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="@dimen/commom_padding"
                android:paddingEnd="@dimen/commom_padding">

                <TextView
                    android:id="@+id/btnSoundOnOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/list_background"
                    android:fontFamily="@font/quicksand"
                    android:gravity="left"
                    android:text="@string/am_thanh"
                    android:textColor="@color/white"
                    android:textSize="@dimen/commom_font_size_big" />

                <CheckBox
                    android:id="@+id/cbSoundOnOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:padding="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="@dimen/commom_padding"
                android:paddingEnd="@dimen/commom_padding">

                <TextView
                    android:id="@+id/btnFontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/list_background"
                    android:fontFamily="@font/quicksand"
                    android:gravity="center_vertical"
                    android:text="@string/font_size"
                    android:textColor="@color/white"
                    android:textSize="@dimen/commom_font_size_big" />

                <TextView
                    android:id="@+id/tvFontSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="#00000000"
                    android:fontFamily="@font/quicksand"
                    android:text="20sp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/commom_font_size_big" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDefault"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_press"
            android:fontFamily="@font/quicksand"
            android:text="Mặc định"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/commom_font_size_big" />

        <Button
            android:id="@+id/btnSave"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_press"
            android:fontFamily="@font/quicksand"
            android:text="Lưu lại"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/commom_font_size_big"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_press"
            android:fontFamily="@font/red_m"
            android:text="@string/str_trang_chu"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/commom_font_size_big" />
    </LinearLayout>

</RelativeLayout>