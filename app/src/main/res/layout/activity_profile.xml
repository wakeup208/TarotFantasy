        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/commom_padding"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvSparateSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="#1Acccccc"
                android:text=" Cài Đặt"
                android:textColor="#b23ad0"
                android:textSize="30dp"
                android:fontFamily="@font/quicksand"
                android:textAlignment="center"
                android:shadowColor="@color/white"
                android:shadowDx="+2"
                android:shadowDy="+2"
                android:shadowRadius="2"
                android:textStyle="normal"
                android:typeface="serif" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/black_white_gradient" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_layout_height"
                android:layout_marginTop="10dp"
                android:paddingStart="@dimen/commom_padding"
                android:paddingEnd="@dimen/commom_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnReverseCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/list_background"
                    android:gravity="left"
                    android:text="Đảo ngược bài"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand"
                    android:shadowColor="@color/white"
                    android:shadowDx="+2"
                    android:shadowDy="+2"
                    android:shadowRadius="2"
                    android:textSize="25dp"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <CheckBox
                    android:id="@+id/cbReverseCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:checked="true"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_layout_height"
                android:layout_margin="@dimen/thin_padding"
                android:paddingStart="@dimen/commom_padding"
                android:paddingEnd="@dimen/commom_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnSoundOnOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/list_background"
                    android:gravity="left"
                    android:text="Âm thanh"
                    android:fontFamily="@font/quicksand"
                    android:shadowColor="@color/white"
                    android:shadowDx="+2"
                    android:shadowDy="+2"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:typeface="serif" />

                <CheckBox
                    android:id="@+id/cbSoundOnOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:checked="true"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_layout_height"
                android:layout_margin="@dimen/thin_padding"
                android:paddingStart="@dimen/commom_padding"
                android:paddingEnd="@dimen/commom_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnFontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/list_background"
                    android:gravity="center_vertical"
                    android:text="Kích cỡ Font chữ"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand"
                    android:shadowColor="@color/white"
                    android:shadowDx="+2"
                    android:shadowDy="+2"
                    android:shadowRadius="2"
                    android:textSize="25dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tvFontSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:fontFamily="@font/quicksand"
                    android:shadowColor="@color/white"
                    android:shadowDx="+2"
                    android:shadowDy="+2"
                    android:shadowRadius="2"
                    android:gravity="center_vertical"
                    android:text="@dimen/commom_font_size"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:typeface="serif" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/thin_padding"
            android:layout_weight="1"
            android:background="@drawable/btn_press"
            android:text="Mặc định"
            android:textAllCaps="false"
            android:fontFamily="@font/quicksand"
            android:textAlignment="center"
            android:shadowColor="@color/white"
            android:shadowDx="+2"
            android:shadowDy="+2"
            android:shadowRadius="2"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:typeface="serif"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand"
            android:textAlignment="center"
            android:shadowColor="@color/white"
            android:shadowDx="+2"
            android:shadowDy="+2"
            android:shadowRadius="2"
            android:background="@drawable/btn_press"
            android:text="Lưu lại"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textAllCaps="false"
            android:typeface="serif"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/thin_padding"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand"
            android:textAlignment="center"
            android:shadowColor="@color/white"
            android:shadowDx="+2"
            android:shadowDy="+2"
            android:shadowRadius="2"
            android:textAllCaps="false"
            android:background="@drawable/btn_press"
            android:text="Hủy"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:typeface="serif"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</RelativeLayout>