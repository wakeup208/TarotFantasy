<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="@dimen/thin_padding">

    <ImageView
        android:id="@+id/ivCellGridImage"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvCellGridName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/association_text_height"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:fontFamily="@font/quicksand"
        android:text="name"
        android:paddingTop="@dimen/thin_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/commom_font_size_small" />

</LinearLayout>