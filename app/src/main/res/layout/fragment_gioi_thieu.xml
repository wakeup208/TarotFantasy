<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:max="http://schemas.applovin.com/android/1.0"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBgFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/mainback"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetEnd="@dimen/dimen_0dp"
        app:contentInsetLeft="@dimen/dimen_0dp"
        app:contentInsetRight="@dimen/dimen_0dp"
        app:contentInsetStart="@dimen/dimen_0dp"
        app:layout_constraintLeft_toLeftOf="@dimen/dimen_0dp"
        app:layout_constraintRight_toRightOf="@dimen/dimen_0dp"
        app:layout_constraintTop_toTopOf="@dimen/dimen_0dp">

        <ImageView
            android:id="@+id/ivBackTb"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_gravity="left|center_vertical|center_horizontal|center|start"
            android:adjustViewBounds="true"
            android:layout_margin="4dp"
            android:background="@drawable/ic_back"
            android:contentDescription="@null"
            android:padding="@dimen/dimen_9dp"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvTitleTb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dimen_45dp"
            android:layout_marginRight="@dimen/dimen_45dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/str_gioi_thieu_ve_tarot"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/commom_font_size_small"
            app:fontFamily="@font/quicksand" />

        <ImageView
            android:id="@+id/ivShareTb"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_gravity="right|center_vertical|center_horizontal|center|end"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="@dimen/dimen_7dp"
            android:visibility="visible" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nvDetail"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:fillViewport="true"
        android:paddingTop="@dimen/dimen_10dp"
        android:background="@drawable/linear_bg"
        app:layout_constraintBottom_toTopOf="@+id/btnThanhTay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbDetail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivThumb"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_300dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/thanh_tay_bg" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:lineSpacingExtra="@dimen/dimen_5dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/commom_font_size_small"
                app:fontFamily="@font/quicksand"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivThumb" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.manojbhadane.QButton
        android:layout_marginTop="@dimen/dimen_10dp"
        android:id="@+id/btnThanhTay"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:textSize="@dimen/thanhtay_text_size"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:text="@string/da_thanh_tay"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:fontFamily="@font/quicksand"
        app:qb_backgroundColor="@color/navigation_color"
        app:qb_radius="100"
        app:qb_strokeColor="@color/white"
        app:qb_strokeWidth="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nvDetail" />
</androidx.constraintlayout.widget.ConstraintLayout>
