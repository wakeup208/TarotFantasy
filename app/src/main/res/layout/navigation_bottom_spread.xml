<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#b23ad0"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:weightSum="3"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/btn_card_spread1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_spread1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_press" />
        <TextView
            android:id="@+id/txtOverall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Tổng thể"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_card_interpretation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_interpretation1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_details"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/txtInterpretation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Chi tiết"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_associations1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/associations1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_book"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/txtAssociations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Sự kết hợp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />

    </LinearLayout>

</LinearLayout>