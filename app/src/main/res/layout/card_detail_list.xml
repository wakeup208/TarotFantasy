<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/ivCardIcon"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="@dimen/card_details_img_with"
        android:layout_height="@dimen/card_details_img_high"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCardName"
            android:layout_width="match_parent"
			android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_light"
            android:fontFamily="@font/quicksand"
            android:textSize="@dimen/commom_font_size_big"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tvExplainCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:fontFamily="@font/quicksand"
            android:textSize="@dimen/commom_font_size"
            android:typeface="serif" />
    </LinearLayout>

</LinearLayout>