<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/navigation_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:weightSum="9"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/btn_spread_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/spread_selected"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_press" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Tổng thể"
            android:textColor="@color/white"

            android:fontFamily="@font/quicksand"
            android:textSize="@dimen/navigation_text_size"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_card_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_list"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_list"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Chi tiết"
            android:textColor="@color/white"

            android:fontFamily="@font/quicksand"
            android:textSize="@dimen/navigation_text_size"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:visibility="invisible"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_rules"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_grid_list"
            android:contentDescription="TODO" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_btn_flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_flip"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_open"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Mở / Đóng"
            android:textColor="@color/white"
            android:fontFamily="@font/quicksand"
            android:textSize="@dimen/navigation_text_size"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>